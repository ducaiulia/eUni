
<h3>Create Homework</h3>
@using (Html.BeginForm("AddHomework", "Module", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "target", @class = "form-horizontal", role = "form" }))
{
    <input name="Module" value="@ViewBag.Module" style="display: none" />
    <label>Homework Text:</label>
        <textarea name="Text" rows="10" cols="500"></textarea>
        <br>
        <label>Homework Score:</label>
        <input name="Score" type='text' class="form-control" id='sandbox-container2' placeholder="Ending" required />
        <button type="submit" class="btn btn-default">Create</button>
}