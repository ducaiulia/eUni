@using EUni_Client.Services


@if (ViewBag.module != null)
{<h3>@ViewBag.Module.Name</h3>}


@using (Html.BeginForm("Content", "Module"))
{
    <input name="Module" value="@ViewBag.Module" style="display: none" />
    <input name="Course" value="@ViewBag.Course" style="display: none" />
    <input type="submit" class="btn-link" style="color: dodgerblue" value="Content" />
}

@if (Session[ServiceNames.ApiService] != null)
{
    var role = Session.GetApiService().UserRole;
    switch (role)
    {
        case UserRole.Student:
            using (Html.BeginForm("Index", "Test"))
            {
                <input name="moduleId" value="@ViewBag.Module.ModuleId" style="display: none" />
                <input name="Module" value="@ViewBag.Module" style="display: none" />
                <input name="Course" value="@ViewBag.Course" style="display: none" />
                <input type="submit" class="btn-link" style="color: dodgerblue" value="Test" />
            }
            using (Html.BeginForm("Homework", "Module"))
            {
                <input name="Module" value="@ViewBag.Module" style="display: none" />
                <input name="Course" value="@ViewBag.Course" style="display: none" />
                <input type="submit" class="btn-link" style="color: dodgerblue" value="Homework" />
            }
            break;
        case UserRole.Teacher:
            using (Html.BeginForm("Index", "Wiki"))
            {
                <input name="Module" value="@ViewBag.Module" style="display: none" />
                <input name="Course" value="@ViewBag.Course" style="display: none" />
                <input type="submit" class="btn-link" style="color: dodgerblue" value="Wiki" />
            }
            using (Html.BeginForm("CreateResource", "Module"))
            {
                <input name="Module" value="@ViewBag.Module" style="display: none" />
                <input type="submit" class="btn-link" style="color: dodgerblue" value="Resources" />
            }
            using (Html.BeginForm("Index", "Test"))
            {
                <input name="moduleId" value="@ViewBag.Module.ModuleId" style="display: none" />
                <input name="Module" value="@ViewBag.Module" style="display: none" />
                <input name="Course" value="@ViewBag.Course" style="display: none" />
                <input type="submit" class="btn-link" style="color: dodgerblue" value="Test" />
            }
            using (Html.BeginForm("Homework", "Module"))
            {
                <input name="Module" value="@ViewBag.Module" style="display: none" />
                <input name="Course" value="@ViewBag.Course" style="display: none" />
                <input type="submit" class="btn-link" style="color: dodgerblue" value="Homework" />
            }
            break;
        case UserRole.Admin:
            break;
        default:
            throw new ArgumentOutOfRangeException();
    }
}

<br>

@if (Session[ServiceNames.ApiService] != null)
{
    var role = Session.GetApiService().UserRole;
    switch (role)
    {
        case UserRole.Student:
            break;
        case UserRole.Teacher:
            using (Html.BeginForm("CreateQuestions", "Module"))
            {
                <input name="moduleId" value="@ViewBag.Module.ModuleId" style="display: none" />
                <input type="submit" class="btn btn-default" value="Create Questions for Module" />
            }
            <br/>
            using (Html.BeginForm("CreateModule", "Module"))
            {
                <input name="Course" value="@ViewBag.Course" style="display: none" />
                <input class="btn btn-default" type="submit" value="Create Module" />
            }

            break;
        case UserRole.Admin:
            break;
        default:
            throw new ArgumentOutOfRangeException();
    }
}


