

<h3>@ViewBag.Module.Name Content</h3>
<br>

<table class="table table-striped table-hover">
    <tr>
        <th>#</th>
        <th>File Name</th>
        <th>Path</th>
    </tr>
    @{
         var i = 0;
         foreach (var file in ViewBag.Files)
         {
             i++;
             <tr>
                 <td>@i</td>
                 <td>
                     <a href="@file.Path">@file.Filename</a>
                 </td>
                 <td>@file.Path</td>
             </tr>
         }
    }
</table>