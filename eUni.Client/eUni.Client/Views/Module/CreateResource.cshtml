

<h2>Create Module Resource</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>#</th>
        <th>File Name</th>
        <th>Path</th>
    </tr>
    @{
        var i = 0;
        foreach (var file in ViewBag.Files)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>
                    <a href="@file.Path">@file.Filename</a>
                </td>
                <td>@file.Path</td>
            </tr>
        }
    }
</table>

@using (Html.BeginForm("UploadModuleResource", "Module", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="">
            <input type="text" name="Module" value="@ViewBag.Module" style="display: none" />
            <input type="file" id="Avatar" name="Files" class="btn" />
            <br />
            <input type="submit" value="Upload Resource" class="btn btn-default" />
        </div>
    </div>
}
