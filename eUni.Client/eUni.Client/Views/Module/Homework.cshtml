
<h3>@ViewBag.Module.Name Homework</h3>
<br>

@Scripts.Render("~/bundles/jquery")

<table class="table table-striped table-hover">
    <tr>
        <th>#</th>
        <th>Homework</th>
        <th>Score</th>
    </tr>
    @{
        var i = 0;
        foreach (var homework in Model)
        {
            i++;
            <tr>
                <td>@i</td>
                <td><a href="de_pus_action_link">@homework.Text</a></td>
                <td>@homework.Score</td>
            </tr>
        }
    }
</table>

<h2>Student Section</h2>

@using (Html.BeginForm("UploadHomework", "Module", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="">
            <input type="text" name="Module" value="@ViewBag.Module" style="display: none"/>
            <input type="file" id="Avatar" name="Files" class="btn"/>
            <br/>
            <input type="submit" value="Upload Homework" class="btn btn-default" />
        </div>
    </div>
}